# ===========================================
# CraftsBite Backend - Environment Variables
# ===========================================

# Environment
ENV=development

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8080

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=craftsbite
DB_PASSWORD=craftsbite_secret
DB_NAME=craftsbite_db
DB_SSLMODE=disable

# Database Connection Pool
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Cutoff Time Configuration (for meal opt-out)
# Format: HH:MM (24-hour format)
MEAL_CUTOFF_TIME=11:00
MEAL_CUTOFF_TIMEZONE=Asia/Dhaka

# History Cleanup Configuration
HISTORY_RETENTION_MONTHS=3
CLEANUP_CRON=0 0 * * *

# Rate Limiting (optional)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
